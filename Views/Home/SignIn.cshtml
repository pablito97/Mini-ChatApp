@model SignInVm

@{
    ViewBag.Title = "Login Page";
    Layout = "_Layout";
}

<div class="text-center">
    <h2>Login Page</h2>
</div>

<form asp-action="SignIn" method="post" class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <input class="form-control" asp-for="UserName" placeholder="Login" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="col-12 col-md-6 offset-md-3 mt-2">
        <button class="btn btn-success w-100">Zaloguj</button>
    </div>
</form>